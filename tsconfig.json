{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "rootDir": "src",
    "baseUrl": "src",
    "types": ["lua-types/5.1", "@wartoshika/wow-declarations"],
    "typeRoots": ["./node_modules/@wartoshika/wow-declarations"],
    "strict": true,
    "jsxFactory": "n",
    "jsx": "react"
  },

  // Optional: Schema file for hints and validation
  "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/TypeScriptToLua/master/tsconfig-schema.json",
  "tstl": {
    "luaTarget": "universal",
    "luaBundle": "dist/main.lua",
    "luaBundleEntry": "src/main.ts",
    "noImplicitSelf": true
  }
}
